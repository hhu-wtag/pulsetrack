<div class="max-w-xl mx-auto py-12">
  <div class="mb-8">
    <div class="text-sm breadcrumbs">
      <ul>
        <li><%= link_to "Teams", teams_path %></li>
        <li>Create New Team</li>
      </ul>
    </div>
    <h1 class="text-3xl font-black mt-2">Create a New Team</h1>
    <p class="text-base-content/60">Invite colleagues and monitor sites together.</p>
  </div>

  <div class="card bg-base-100 shadow-xl border border-base-200">
    <div class="card-body">
      <%= form_with model: @team, class: "space-y-6" do |f| %>

        <% if @team.errors.any? %>
          <div class="alert alert-error shadow-sm mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <h3 class="font-bold">Check the following:</h3>
              <ul class="text-sm list-disc list-inside">
                <% @team.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="form-control w-full">
          <%= f.label :name, "Team Name", class: "label font-semibold" %>
          <%= f.text_field :name,
                           placeholder: "e.g. Acme Corp Monitoring",
                           class: "input input-bordered w-full focus:input-primary",
                           autofocus: true,
                           required: true %>
          <label class="label">
            <span class="label-text-alt text-base-content/50">You can change this later in team settings.</span>
          </label>
        </div>

        <div class="card-actions flex flex-col gap-3 mt-4">
          <%= f.submit "Create Team", class: "btn btn-primary w-full" %>
          <%= link_to "Cancel", teams_path, class: "btn btn-ghost w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>