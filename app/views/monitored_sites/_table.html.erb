<div class="overflow-x-auto w-full">
  <table class="table table-zebra w-full shadow-sm border border-base-200">
    <thead class="bg-base-200/50">
    <tr>
      <th class="rounded-tl-lg">Site Name</th>
      <th>Status</th>
      <th class="hidden md:table-cell">Check Frequency</th>
      <th>Last Result</th>
      <th class="text-right rounded-tr-lg">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% if sites.any? %>
      <% sites.each do |site| %>
        <tr class="hover">
          <td>
            <div class="flex flex-col">
              <span class="font-bold text-base-content"><%= site.name %></span>
              <span class="text-xs text-base-content/50 font-mono"><%= site.url %></span>
            </div>
          </td>
          <td>
            <%# Dynamic badge based on status enum %>
            <div class="badge <%= role_badge_class(site.last_status) %> gap-2 font-medium">
              <%= site.last_status.upcase %>
            </div>
          </td>
          <td class="hidden md:table-cell">
            <span class="text-sm">Every <%= site.check_frequency_seconds %>s</span>
          </td>
          <td>
            <% if site.check_results.any? %>
                <span class="text-xs opacity-70">
                  Checked <%= time_ago_in_words(site.check_results.last.created_at) %> ago
                </span>
            <% else %>
              <span class="text-xs italic opacity-40">No checks yet</span>
            <% end %>
          </td>
          <td class="text-right">
            <div class="flex justify-end gap-2">
              <%= link_to "View", monitored_site_path(site), class: "btn btn-ghost btn-xs" %>

              <%# Only show edit/delete if current_user has permission in current_team %>
              <% if current_user.has_edit_permission_in?(current_team) %>
                <%= link_to "Edit", edit_monitored_site_path(site), class: "btn btn-ghost btn-xs text-info" %>
                <%= button_to "Delete", monitored_site_path(site),
                              method: :delete,
                              data: { turbo_confirm: "Are you sure?" },
                              class: "btn btn-ghost btn-xs text-error" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5" class="text-center py-10">
          <div class="flex flex-col items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-base-content/50">No sites added to this team yet.</p>
            <%= link_to "+ Add your first site", new_monitored_site_path, class: "btn btn-sm btn-primary mt-2" %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>