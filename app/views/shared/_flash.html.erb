<%# app/views/shared/_flash.html.erb %>
<%
  # Map Rails flash keys to daisyUI alert classes
  alert_class = case type.to_s
                when 'notice' then 'alert-success'
                when 'alert', 'error' then 'alert-error'
                else 'alert-info'
                end
%>

<div role="alert" data-controller="flash" class="alert <%= alert_class %> shadow-lg mb-4">
  <% if type.to_s == 'notice' %>
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
  <% else %>
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
  <% end %>

  <span><%= message %></span>

  <%# Optional: Add a close button if you want %>
  <button class="btn btn-ghost btn-xs" data-action="flash#dismiss" onclick="this.parentElement.remove()">âœ•</button>
</div>